{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "types.json",
    "description": "Commonly used schema definition types",
    "definitions": {
        "string": {
            "description": "String with a minimum length of 1 (i.e. excludes '')",
            "type": "string",
            "minLength": 1
        },
        "positiveInteger": {
            "description": "Integer greater than zero",
            "type": "integer",
            "minimum": 0
        }
    }
}
